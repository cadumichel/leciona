rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra principal: cada usuário só acessa seus próprios dados
    match /users/{userId} {
      // Leitura e escrita apenas para o usuário autenticado correspondente
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validações adicionais para prevenir dados maliciosos
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.size() < 5000000 // Máximo 5MB por documento
        && request.resource.data.keys().hasAll(['profile', 'schools', 'settings']); // Campos obrigatórios
    }
    
    // Bloqueia tudo que não foi explicitamente permitido
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
